        android:id="@+id/checkOutFragment"
        android:name="com.cheise_proj.e_commerce.ui.bag.CheckOutFragment"
        android:label="fragment_check_out"
        tools:layout="@layout/fragment_check_out" />
    <fragment
        android:id="@+id/paymentCardFragment"
        android:name="com.cheise_proj.e_commerce.ui.bag.PaymentCardFragment"
        android:label="fragment_payment_card"
        tools:layout="@layout/fragment_payment_card" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.cheise_proj.e_commerce.ui.favorite.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.cheise_proj.e_commerce.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>